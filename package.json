  "description": "A Software Engineering Tutor built with Claude's Agent SDK",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "bin": {
    "claude-tutor": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
